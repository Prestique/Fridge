<?xml version="1.0" encoding="utf-8"?>

<layout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/name_food"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="WoÅ‚owina"
        android:textSize="26sp"
        android:textStyle="bold"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:padding="4dp"
        android:id="@+id/etInputFood"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_exp_date"

        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="12-02-2023"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:id="@+id/tvExpDate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_weight"

        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="500"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:textSize="26sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:id="@+id/etWeight"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_quantity"

        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="2"
        android:textSize="26sp"
        android:textStyle="bold"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:padding="4dp"
        android:id="@+id/etQuantity"/>
</LinearLayout>

</layout>